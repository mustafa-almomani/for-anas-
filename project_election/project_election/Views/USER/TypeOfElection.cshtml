    <div class="cont">
        <div class="card">
            <img src="~/Content/assets/تصويت.jpg" class="card-img-top" alt="Fissure in Sandstone" />
            <div class="card-body">
                <h5 class="card-title">انتخابات الأحزاب</h5>
                <p class="card-text">صوت لممثلي حزبك.</p>
                <a href="@Url.Action(partyListAction, "user")" class="card-link @((isPartyActive) ? "active-card" : "inactive-card")">تصويت</a>
            </div>
        </div>
        <div class="card">
            <img src="~/Content/assets/تصويت.jpg" class="card-img-top" alt="Fissure in Sandstone" />
            <div class="card-body">
                <h5 class="card-title">الانتخابات المحلية</h5>
                <p class="card-text">صوت لممثليك المحليين.</p>
                <a href="@Url.Action(localListAction, "user")" class="card-link @((isLocalActive) ? "active-card" : "inactive-card")">تصويت</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var areBothInactive = @areBothInactive.ToString().ToLower();
            if (areBothInactive) {
                Swal.fire({
                    title: 'اكتمل عملية التصويت',
                    text: 'لقد أكملت عملية التصويت. شكراً لك!',
                    icon: 'info',
                    confirmButtonText: 'موافق'
                });
            }
        });
    </script>
</body>
</html>