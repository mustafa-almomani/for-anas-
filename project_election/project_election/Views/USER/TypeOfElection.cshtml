@{
    ViewBag.Title = "نوع الانتخابات";
    string localListAction = ViewBag.LocalElectionsPath;
    string partyListAction = ViewBag.PartyElections;
    bool isLocalActive = localListAction != null;
    bool isPartyActive = partyListAction != null;
    bool areBothInactive = !isLocalActive && !isPartyActive;
    Layout = "~/Views/Shared/_Layout1.cshtml";
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .cont {
            display: flex;
            justify-content: space-evenly;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 4px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 16px;
            overflow: hidden;
            width: 300px;
        }

        .card-img-top {
            display: block;
            max-width: 100%;
            height: auto;
        }

        .card-body {
            padding: 16px;
        }

        .card-title {
            font-size: 1.25rem;
            margin-bottom: 8px;
        }

        .card-text {
            font-size: 1rem;
            margin-bottom: 16px;
            color: #555;
        }

        .card-link {
            display: inline-block;
            padding: 8px 16px;
            color: #007bff;
            text-decoration: none;
            border: 1px solid transparent;
            border-radius: 4px;
            transition: background-color 0.2s, border-color 0.2s, color 0.2s;
        }

            .card-link:hover {
                background-color: #f8f9fa;
                border-color: #007bff;
            }

        .active-card {
            color: #28a745;
            border-color: #28a745;
        }

        .inactive-card {
            color: #6c757d;
            border-color: #6c757d;
        }
    </style>
</head>
<body>
