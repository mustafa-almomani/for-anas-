                                        </div>
                                    </div>
                                    <form action="#!">
                                        
                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    @Html.TextBoxFor(m => m.NationalNumber, new { @class = "form-control", placeholder = "National Number" })
