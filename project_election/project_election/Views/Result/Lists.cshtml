@model IEnumerable<project_election.Models.LocalList>

@{
    ViewBag.Title = "Lists";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Raleway:300,400,500,700">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">

    <style>
        body {
            background-color: #f9f9f9;
            font-family: 'Open Sans', sans-serif;
        }

        .container {
            max-width: 1200px;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background-color: #ffffff;
            margin-bottom: 30px;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

            .card .badge {
                background-color: #007bff;
                color: #fff;
                border-radius: 12px;
                padding: 8px 16px;
                font-size: 14px;
            }

            .card .heading {
                font-size: 20px;
                font-weight: 600;
                color: #333;
                margin: 15px 0;
            }

        .progress {
            height: 10px;
            border-radius: 10px;
            background-color: #e9ecef;
            margin-top: 20px;
        }

        .progress-bar {
            background-color: #007bff;
            border-radius: 10px;
        }

        .text1 {
            font-size: 16px;
            font-weight: 600;
            color: #333;
        }

        .text2 {
            color: #6c757d;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            font-size: 16px;
            font-weight: 600;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #0056b3;
                color: #fff;
            }

        h2 {
            font-size: 32px;
            text-align: center;
            font-weight: bold;
            margin-bottom: 40px;
            color: #333;
        }

        .row {
            display: flex;
            justify-content: space-evenly;
            flex-wrap: wrap;
        }
    </style>
</head>
<body>

    <h2> القوائم المحلية</h2>

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card p-4">
                        <div class="d-flex justify-content-between">
                            <div class="badge"> <span>@item.Sucess</span> </div>
                        </div>
                        <h3 class="heading">@item.ListName</h3>
                        @{
                            // Ensure Session variable is not null and properly cast to double
                            double totalVotesForArea = Session["totalVotesForArea"] != null ? Convert.ToDouble(Session["totalVotesForArea"]) : 1.0;
                            // Cast NumberOfVotes to double to ensure floating-point division
                            double numberOfVotes = (double)item.NumberOfVotes;
                            // Calculate the percentage width of the progress bar
                            double progressPercentage = (numberOfVotes / totalVotesForArea) * 100;
                        }
                       
                        <div class="mt-3">
                            <span class="text1">@item.NumberOfVotes <span class="text2"> صوت</span></span>
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Candidates", "Result", new { id = item.ID })" class="btn-custom">عرض التفاصيل</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Including Bootstrap JS and its jQuery dependency -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>