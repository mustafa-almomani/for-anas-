@model project_election.Models.GeneralListing

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}<style>
    section.h-100.bg-dark {
        background-color: rgb(209 209 209) !important;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
  
    <section class="h-100 bg-dark">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row g-0">
                            <div class="col-xl-6 d-none d-xl-block">
                                <img src="~/Content/assets/نواب.jpg"
                                     alt="Sample photo" class="img-fluid"
                                     style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; height:500px;width100%" />
                            </div>
                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase">نموذج تسجيل قائمه حزبيه </h3>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                @Html.TextBoxFor(model => Model.Name, new { @class = "form-control form-control-lg" })
                                                @Html.LabelFor(model => Model.Name, new { @class = "form-label" })
                                            </div>
                                        </div>


                                        <button type="submit" class="btn btn-primary btn-lg">Next</button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
}